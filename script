from kivy.app import *
from kivy.uix.label import *
from kivy.uix.button import *
from kivy.uix.textinput import *
from kivy.uix.boxlayout import *
from kivy.uix.screenmanager import *
from instructions import *

class FirstScr(Screen):
    def __init__(self,**kwargs):
        super().__init__(**kwargs)
        
        vl = BoxLayout(orientation = 'vertical')
        hl = BoxLayout()
        vl1 = BoxLayout(orientation = 'vertical')
        vl2 = BoxLayout(orientation = 'vertical')
        
        txt = Label(text = txt_instruction)
        txt_name = Label(text = "Enter a name:")
        txt_age = Label(text = "Enter a age:")
        
        input_name = TextInput(text = "Enter a name", multiline = False)
        input_age = TextInput(text = "Enter a age", multiline = False)
        
        btn = Button(text = 'Next')
        btn.on_press = self.next()

        vl.add_widget(txt)

        vl1.add_widget(txt_name)
        vl1.add_widget(input_name)

        vl2.add_widget(txt_age)
        vl2.add_widget(input_age)

        hl.add_widget(vl1)
        hl.add_widget(vl2)

        vl.add_widget(hl)
        vl.add_widget(btn)

    def next(self):
        pass
        '''self.screen.manager.transition.direction = 'right'
        self.screen.manager.current = "second" '''

class SecondScr(Screen):
    def __init__(self,**kwargs):
        super().__init__(**kwargs)

        vl = BoxLayout(orientation = 'vertical')
        hl = BoxLayout()

        txt = Label(text = txt_test1)
        txt_pulse = Label(text = "Count a pulse:")

        input_pulse = TextInput(text= "Enter a pulse", multiline = False)

        btn = Button(text = 'Next')
        btn.on_press = self.next()

        vl.add_widget(txt)

        hl.add_widget(txt_pulse)
        hl.add_widget(input_pulse)

        vl.add_widget(hl)

        vl.add_widget(btn)

    def next(self):
        pass

class ThirdScr(Screen):
    def __init__(self,**kwargs):
        super().__init__(**kwargs)

        vl = BoxLayout(orientation = 'vertical')

        txt = Label(text = txt_test2)

        btn = Button(text = 'Next')
        btn.on_press = self.next()
    
    def next(self):
        pass

class FourthScr(Screen):
    def __init__(self,**kwargs):
        super().__init__(**kwargs)

        vl = BoxLayout(orientation = 'vertical')

        hl1 = BoxLayout()
        hl2 = BoxLayout()

        txt = Label(text = txt_test2)

        txt_first = Label(text = "First:")
        txt_second = Label(text = "Second:")

        input_first = TextInput()
        input_second = TextInput()

        btn = Button(text = 'Next')
        btn.on_press = self.next()

        vl.add_widget(txt)

        hl1.add_widget(txt_first)
        hl1.add_widget(input_first)

        hl2.add_widget(txt_second)
        hl2.add_widget(input_second)

        vl.add_widget(hl1)
        vl.add_widget(hl2)

        vl.add_widget(btn)

    def next(self):
        pass

class FifthScr(Screen):
    def __init__(self,**kwargs):
        super().__init__(**kwargs)

        vl = BoxLayout(orientation = 'vertical')

        txt = Label(text = 'Results:')



class MyApp(App):
    def build(self):
        sm = ScreenManager()
        sm.add_widget(FirstScr())
        sm.add_widget(SecondScr())
        sm.add_widget(ThirdScr())
        sm.add_widget(FourthScr())
        sm.add_widget(FifthScr())
        return sm

MyApp().run()
